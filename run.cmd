@ECHO OFF
REM --------------------------------------------------------------------
REM run.cmd v 0.3.2

REM --------------------------------------------------------------------
SET PROJECT_BIN=%CD%\bin
SET FILENAME=main
REM --------------------------------------------------------------------

REM --------------------------------------------------------------------
IF EXIST %PROJECT_BIN%\%FILENAME%.exe. (
	START /D"%PROJECT_BIN%" "" "%FILENAME%.exe"
	GOTO FINISH
)

REM --------------------------------------------------------------------
SET /P CHOISE=Compile it first. Launch make.cmd? (y/n)
IF %CHOISE%==y (
	START /D"%CD%" make.cmd
	GOTO FINISH
)
REM --------------------------------------------------------------------
:FINISH
EXIT
REM --------------------------------------------------------------------